				<value>com.mitosis.shopsbacker.model.Image</value>
				<value>com.mitosis.shopsbacker.model.Merchant</value>
				<value>com.mitosis.shopsbacker.model.MerchantRequest</value>
				<value>com.mitosis.shopsbacker.model.MissingProduct</value>
				<value>com.mitosis.shopsbacker.model.Movement</value>
				<value>com.mitosis.shopsbacker.model.MovementLine</value>
				<value>com.mitosis.shopsbacker.model.MyCart</value>
				<value>com.mitosis.shopsbacker.model.OrderNumber</value>
				<value>com.mitosis.shopsbacker.model.OrderTax</value>
				<value>com.mitosis.shopsbacker.model.Product</value>
				<value>com.mitosis.shopsbacker.model.ProductCategory</value>
				<value>com.mitosis.shopsbacker.model.ProductImage</value>
				<value>com.mitosis.shopsbacker.model.ProductInventory</value>
				<value>com.mitosis.shopsbacker.model.ProductOffer</value>
				<value>com.mitosis.shopsbacker.model.ProductOfferLine</value>
				<value>com.mitosis.shopsbacker.model.ProductType</value>
				<value>com.mitosis.shopsbacker.model.Role</value>
				<value>com.mitosis.shopsbacker.model.SalesOrder</value>
				<value>com.mitosis.shopsbacker.model.SalesOrderLine</value>
				<value>com.mitosis.shopsbacker.model.ShippingCharges</value>
				<value>com.mitosis.shopsbacker.model.State</value>
				<value>com.mitosis.shopsbacker.model.Storagebin</value>
