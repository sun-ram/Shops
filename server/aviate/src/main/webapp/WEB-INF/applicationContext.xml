	<context:component-scan base-package="com.mitosis.shopsbacker" />
	<context:annotation-config />
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://54.68.134.166:3306/shopsbacker" />		
		<property name="username" value="root"/>
		<property name="password" value="root"/>
	</bean>
	
	<!-- Hibernate session factory -->
	<bean id="sessionFactory" 
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">

		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="hibernateProperties">
			<props>
			    <prop key="hibernate.default_schema" >shopsbacker</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="connection.pool_size">10</prop>
				<prop key="hibernate.format_sql">false</prop>
       			<prop key="hibernate.use_sql_comments">true</prop>
				<prop key="hbm2ddl.auto">create</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop>
				<prop key="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory</prop>
				<prop key="hibernate.generate_statistics">true</prop>
				<prop key="hibernate.cache.use_structured_entries">true</prop>
				<prop key="hibernate.cache.use_second_level_cache">true</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
			</props>
		</property>
		<!-- <property name="hibernate.default_schema" value="shopsbacker"/> -->

		 <property name="annotatedClasses">
			<list>				
				<value>com.mitosis.shopsbacker.model.Address</value>
				<value>com.mitosis.shopsbacker.model.Banner</value>
				<value>com.mitosis.shopsbacker.model.Country</value>
