				<value>com.mitosis.shopsbacker.model.Uom</value>
				<value>com.mitosis.shopsbacker.model.User</value>
				<value>com.mitosis.shopsbacker.model.Warehouse</value>				
			</list>
		</property>
	</bean>
	
	 <bean id="transactionManager" 
            class="org.springframework.orm.hibernate4.HibernateTransactionManager">
    	<property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    
    
